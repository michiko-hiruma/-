<h1> タスク編集 </h1>
<div class = "row">
    <div class= "col-md-8 col-md-offset-2">
    <%= form_with(model: @task,url: task_path,method: :patch,local: true) do |f|%>
    <% @task.errors.full_messages.each do |message| %>
    <div class="form_error"><%= message %></div>
    <% end %>
    <%= f.label "名称",class: "label-form"%>
    <%= f.text_field :name,class: "form-control"%>
    <%= f.label "詳細",class: "label-form"%>
    <%= f.text_area :detail,rows: 5,class: "form-control" %>
    <%= f.submit "更新",class: "btn btn-primary btn-form btnpojishonn" %>
    <%= link_to "キャンセル", tasks_path,data:{confirm: "キャンセルします。よろしいですか？"}, class: "btn btnpojishonn" %>
    <% end %>
    </div>
</div>