<h1>タスク詳細</h1>
<div class = "row">
    <div class = "col-md-10 col-md-offset-1">
        <table class="table table-bordered" id="table-task">
            <tbody>
                <tr>
                    <th class="active col-md-2 text-center">ID</th>
                    <th class="col-md-10 "><%= @task.id %></th>
                </tr>
                <tr>
                    <th class="active text-center">名称</th>
                    <th><%= @task.name %></th>
                </tr>
                    <th class= "active text-center">詳細</th>
                    <th><%= raw Rinku.auto_link(simple_format(@task.description)) %></th>
                </tr>
                <tr>
                    <th class= "active text-center">作成日</th>
                    <th><%= @task.created_at.strftime("%Y/%m/%d %H:%M") %></th>
                </tr>
                <tr>
                    <th class="active text-center">更新日</th>
                    <th><%= @task.updated_at.strftime("%Y/%m/%d %H:%M") %></th>
                </tr>
            </tbody>
        </table>
        <div> <%= link_to "編集",edit_task_path(@task),class: "btn btn-lg btn-success" %>
              <%= link_to "削除", @task, method: :delete, data:{confirm: "「#{@task.name}」削除します。よろしいですか？"}, class: "btn btn-lg btn-danger"%>
        </div>
    </div>
</div>