<h1>タスク新規作成</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task,url: user_tasks_path(@user), local: true) do |f| %>
     
      <%= f.label :name, "名称", class: "label-signup" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :detail,"詳細", class: "label-signup" %>
      <%= f.text_area :detail,rows: 5, class: "form-control" %>

      <%= f.submit "新規登録", class: "btn btn-primary btn-signup" %>
    <% end %>
  </div>
</div>