<h1>管理者のタスク一覧</h1>
<div class="text-right"> 
    <%= link_to "タスク新規作成", new_task_path, class: "btn btn-success btn-lg" %>
</div>
<table class="table">
    <thead>
        <tr>
            <th>名称</th> <th>作成日</th>
        </tr>
        
    </thead>
    <% @tasks.each do |task| %>
        <tr> 
            <td><%= link_to task.name, task_path(task) %></td> 
            <td><%= task.created_at %></td>
            <td><%= link_to "編集", edit_task_path(task), class: "btn btn-success " %>
            <%= link_to "削除", task, method: :delete, data: {confirm: "「#{task.name}」削除します 。よろしいですか?"}, class: "btn btn-danger" %></td>
        </tr>
    <% end %>
</table>