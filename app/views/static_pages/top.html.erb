<% provide(:title, "Top") %>
<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <title></title>
      <h1 class="a">TaskApp</h1> 
      <h1 class="b">TaskAppは簡易ToDo管理ツールです。</h1>
      <h1 class="b">↓↓　初めてのご利用　↓↓</h1>
      <%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-primary c" %>
    </div>
    <div class="col-lg-6">
      <h1>ログイン</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

      <%= f.label :メールアドレス, class: "label-login" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :パスワード, class: "label-login" %>
      <%= f.password_field :password, class: 'form-control' %>
      
      <%= f.label :remember_me, class: "checkbox inline checkbox-iog in", for: "remember-me" do %>
        <%= f.check_box :remember_me, id: "remember-me" %>
        <span>ログイン情報を記憶する</span>
      <% end %>

      <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-login" %>
    <% end %>
    <p>
      ユーザー登録がまだの場合は<%= link_to "こちら", signup_path %>
    </p>
  </div>
</div>

    </div>　
  </div>
</div>
