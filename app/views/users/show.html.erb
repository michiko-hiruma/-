<% provide(:title, @user.name) %>
<h1>プロフィール</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-bordered table-hover">
      <tr>
        <th class="text-center active"> <%= User.human_attribute_name :id %></th>
        <td><%= @user.id %></td>
      </tr>
      <tr>
        <th class="text-center active"><%= User.human_attribute_name :name %></th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th class="text-center active"><%= User.human_attribute_name :email %></th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th class="text-center active"><%= User.human_attribute_name :created_at %></th>
        <td><%= @user.created_at.strftime("%Y/%m/%d %H:%M") %></td>
      </tr>
    </table>
  </div>    
</div>
